<UserControl x:Class="ChatBot.Chat.MessageUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatBot.Chat"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid>
		<Border Background="{Binding Path=BackgroundColor}" HorizontalAlignment="{Binding Path=Align}" Width="150" Margin="5" CornerRadius="5">
            <TextBlock Text="{Binding Path=Message}" TextWrapping="WrapWithOverflow" VerticalAlignment="Stretch" Margin="5" ></TextBlock>
		</Border>
	</Grid>
</UserControl>
